                <TextBox Width="200" Height="30" Margin="10"/>
                <TextBox Width="200" Height="30" Margin="10"/>
                <TextBox Width="200" Height="30" Margin="10"/>
                <TextBox Width="200" Height="30" Margin="10"/>
                <TextBox Width="200" Height="30" Margin="10"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
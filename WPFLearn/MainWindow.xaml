<Window x:Class="WPFLearn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLearn"
        xmlns:userControls="clr-namespace:WPFLearn.View.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox Name="lvInput" Height="40" VerticalContentAlignment="Center" Margin="5"/>
        <Button Name="btnAddItem" Grid.Column="1" Width="50" Height="40" Content="Add" Click="btnAddItem_Click" HorizontalAlignment="Left"/>
        <Button Grid.Column="1" Name="btnDelete" Width="50" Height="40" Content="Delete" Click="btnDelete_Click" Margin="60,0,0,0" HorizontalAlignment="Left"/>
        <Button Grid.Column="1" Name="btnClear" Width="50" Height="40" Content="Clear" Click="btnClear_Click" Margin="120,0,0,0" HorizontalAlignment="Left"/>

        <ListView Name="lvEntries" Grid.Row="1" Grid.ColumnSpan="2"/>
    </Grid>
</Window>